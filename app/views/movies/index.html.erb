<%= render 'layouts/category' %>
<% if !user_signed_in?%>
  <div class="jumbotron">
    <h1>Welcome to MVM</h1>
    <p>
      Get more information for your favorite movies and latest series 
    </p>
      <ul>
        <p><%= link_to "Sign Up", new_user_registration_path, class: "btn btn-primary btn-lg " %></p>
        <p><%= link_to "Sign In", new_user_session_path, class: "btn btn-primary btn-lg " %></p>
      </ul>
  </div>
<% else %>
  <div class= "row">
    <% @movies.each do |movie|%>
      <div class="col-sm-6 col-md-3">
        <div class="thumbnail">
          <%= link_to (image_tag movie.image.url(:medium), class: 'image'), movie %>

            <%= link_to like_movie_path(movie), class: "like", method: :put do %>
            <button type= "button" class = "btn btn-info" aria-label= "Left Align">
              <span class= "glyphicon glyphicon-thumbs-up glyphicon-align-center" aria-hidden= "true"></span>
              <span class= "badge"><%= movie.get_upvotes.size%></span>
            </button>
           <%end%>

          <%= link_to dislike_movie_path(movie), class: "like", method: :put do %>
          <button type= "button" class = "btn btn-info" aria-label= "Left Align">
            <span class= "glyphicon glyphicon-thumbs-up glyphicon-align-center" aria-hidden= "true"></span>
            <span class= "badge"><%= movie.get_downvotes.size%></span>
          </button>
          <%end%>
        </div>
      </div>


    <% end %>
  </div>
<% end %>
<%= link_to 'new movie', new_movie_path %>